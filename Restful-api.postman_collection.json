		{
			"name": "GET products by IDs",
			"event": [
				{
					"listen": "test",
					"script": {
						"exec": [
							"pm.test(\"Status code is 200\", function () {",
							"    pm.response.to.have.status(200);",
							"});",
							"",
							"pm.test(\"Products should have length 3\", function () {",
							"    let products = pm.response.json();",
							"    pm.expect(products).to.have.length(3);",
							"});",
							"",
							"pm.test(\"Products IDs should equal expected IDs\", function () {",
							"    let products = pm.response.json();",
							"    const actualIds = products.map(p => Number(p.id));",
							"    const expectedIds = [",
							"        pm.variables.get('id1'),",
							"        pm.variables.get('id2'),",
							"        pm.variables.get('id3')",
							"    ].map(id => Number(id));",
							"    pm.expect(actualIds).to.eql(expectedIds);",
							"});"
						],
						"type": "text/javascript",
						"packages": {},
						"requests": {}
					}
				}
			],
